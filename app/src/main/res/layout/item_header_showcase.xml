<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerId"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:background="@android:color/white">

    <!--In Samsung phones we need to make focusable the TextViews inside a RecyclerView so it can be focusable for accessibility-->
    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tmp_txvw_header_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="28sp"
            android:layout_marginTop="16dp"
            android:text="Showcase Header"
            android:textStyle="bold"
            android:focusable="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tmpshowcase_imgvw_right"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>